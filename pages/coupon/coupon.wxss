/* 头部 */

.header {
  width: 100%;
  height: 95rpx;
  position: fixed;
  top: 0;
  background-color: #fefefe;
  z-index: 100;
}

.headerTab {
  float: left;
  width: 50%;
  height: 100%;
}

.headerTab>text {
  font-size: 32rpx;
  display: block;
  width: 50%;
  text-align: center;
  margin: 0 auto;
  color: #666;
  padding: 24rpx 0;
  box-sizing: border-box;
}

.activeClick {
  color: #ff9180 !important;
  border-bottom: 3px solid #ff9180;
}

/* 空 */

.empty {
  height: 95rpx;
}

/* 列表详情 */

.coupon-content {
  padding: 0 30rpx;
}

.box-list {
  width: 100%;
}

.box-list image {
  display: block;
  width: 50%;
  margin: 0 auto;
}

.box-list text {
  display: block;
  width: 100%;
  text-align: center;
  color: #bbb;
}

/* 登录 */

.show-author {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99;
  background: #000;
  opacity: 0.8;
}

.show-author>.get-userinfo {
  color: #fff;
  background-color: #ff9180;
  border-radius: 10rpx;
  top: 50%;
  margin-top: 70%;
}
